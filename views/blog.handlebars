<article>
  <h2>{{title}}</h2>
  <h3>Posted by {{user.username}} on {{format_date date}}</h3>
  <p>{{content}}</p>
</article>
{{#each comments as |comment|}}
  <section>
    <h2>Comments</h2>
    <h3>Posted by
      {{comment.user.username}}
      on
      {{format_date comment.created_at}}</h3>
    <p>{{comment.content}}</p>
  </section>
{{/each}}